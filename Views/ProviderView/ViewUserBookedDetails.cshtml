@model IEnumerable<WirenetApp.User>

@{
    ViewBag.Title = "ViewUserBookedDetails";
    Layout = "~/Views/Shared/_ServiceProviderLayout.cshtml";
}

<h2>ViewUserBookedDetails</h2>
<link rel="stylesheet" href="~/Content/ViewServiceProvider.css" />
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" style="color:black">
    <tr>
       
        <th class="font">
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th class="font">
            @Html.DisplayNameFor(model => model.Phoneno)
        </th>
        <th class="font">
            @Html.DisplayNameFor(model => model.Emailid)
        </th>
        <th class="font">
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>

        <td class="font" >
            @Html.DisplayFor(modelItem => item.FullName)
        </td>
        <td class="font">
            @Html.DisplayFor(modelItem => item.Phoneno)
        </td>
        <td class="font">
            @Html.DisplayFor(modelItem => item.Emailid)
        </td>
        <td class="font">
            @Html.DisplayFor(modelItem => item.Address)
        </td>
