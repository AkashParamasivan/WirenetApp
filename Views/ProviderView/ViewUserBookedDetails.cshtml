@model IEnumerable<WirenetApp.User>

@{
    ViewBag.Title = "ViewUserBookedDetails";
    Layout = "~/Views/Shared/_ServiceProviderLayout.cshtml";
}

<h2>ViewUserBookedDetails</h2>
<h2 style="color:yellow;font-size:larger;font:bolder">Welcome @ViewBag.message</h2>
<link rel="stylesheet" href="~/Content/table.css" />



<table class="table " style="color:coral">

    <tr>

        <th class="font" style="background-color:white">Full Name </th>
        <th class="font" style="background-color:white">Phone number</th>
        <th class="font" style="background-color:white">EmailID</th>
        <th class="font" style="background-color:white">Address</th>


        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td class="font">
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td class="font">
                @Html.DisplayFor(modelItem => item.Phoneno)
            </td>
            <td class="font">
                @Html.DisplayFor(modelItem => item.Emailid)
            </td>
            <td class="font">
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td class="font">
                @*@Html.ActionLink("UpdateStatus", "UpdateBookingStatus", "UpdateStatus", new { id = item.Uid }, null) |*@
                <button id="my-button" onclick="location.href='@Url.Action("UpdateBookingStatus", "UpdateStatus", new { id = item.Uid }, null)'">UpdateStatus</button>

            </td>
        </tr>
    }

</table>
<button id="my-button" onclick="location.href='@Url.Action("Logout", "Login")'">Logout</button>


